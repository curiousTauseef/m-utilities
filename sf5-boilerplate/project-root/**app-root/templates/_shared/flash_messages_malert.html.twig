{% set flash_messages = app.flashes|default() %}
{%- if flash_messages -%}
  {% set type = '' %}
  {% set title = '' %}
  {% set mes = '' %}
  {% set mes_array = [] %}

  {% for label, messages in flash_messages %}
    {% set type = label %}
    {% for message in messages %}
      {% set mes_array = mes_array|merge([message]) %}
    {% endfor %}
  {% endfor %}

  {% set mes = mes_array|join('<br>') %}

  {%- if type == 'success' -%}
    {% set title = 'Operazione completata' %}

  {%- elseif type == 'error' -%}
    {% set title = 'Si Ã¨ verificato un errore' %}

  {%- elseif type == 'warning' -%}
    {% set title = 'Attenzione!' %}

  {%- else -%}
    {% set title = '' %}

  {%- endif -%}

  <script>
    mAlert({
      type  : '{{ type }}',
      title : '{{ title }}',
      mes   : '{{ mes|raw }}',
      timer: null,
      ok_btn_text: 'OK'
    });

    {# console.log({
